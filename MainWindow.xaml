<Window x:Class="BorderlessWindowApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="显示设置" Height="480" Width="620"
        Background="#FFF7F7F7" FontFamily="Segoe UI" FontSize="14">
    <StackPanel Margin="10" Orientation="Vertical">

        <TextBlock Text="窗口标题：" />
        <ComboBox x:Name="WindowComboBox" Width="300"/>

        <TextBlock Text="窗口样式：" Margin="0,10,0,0"/>
        <ComboBox x:Name="StyleComboBox" Width="300" />

        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <Button Content="应用样式" Width="100" Click="ApplyStyle_Click"/>
            <Button Content="恢复快照" Width="100" Margin="10,0,0,0" Click="Restore_Click"/>
        </StackPanel>

        <TextBox x:Name="LogBox" Height="150" IsReadOnly="True"
                 FontFamily="Consolas" FontSize="12"
                 VerticalScrollBarVisibility="Auto"
                 TextWrapping="Wrap"/>
    </StackPanel>
</Window>
